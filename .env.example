# ==============================================
# PostgreSQL Configuration
# ==============================================
POSTGRES_DB=reliant_main
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Non-root PostgreSQL user for n8n
POSTGRES_NON_ROOT_USER=n8n_user
POSTGRES_NON_ROOT_PASSWORD=CHANGE_ME_N8N_DB_PASSWORD

# ==============================================
# n8n Configuration
# ==============================================
# Database connection (uses non-root user)
N8N_DB_NAME=reliant_main
N8N_DB_USER=n8n_user
N8N_DB_PASSWORD=CHANGE_ME_N8N_DB_PASSWORD

# n8n Security - IMPORTANT: Generate secure random strings
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
N8N_JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# n8n Reverse Proxy Settings
# Update these with your actual domain
N8N_HOST=your-n8n-domain.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://your-n8n-domain.com/
N8N_SECURE_COOKIE=true
GENERIC_TIMEZONE=America/Los_Angeles

# ==============================================
# Backup Configuration
# ==============================================
# Cron schedule format: minute hour day month weekday
# Default: 0 2 * * * (daily at 2 AM)
BACKUP_SCHEDULE=0 2 * * *

# Number of days to retain backups
BACKUP_RETENTION_DAYS=7
